{
  "extends": [
    "next/core-web-vitals"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    // Desativar regras espec√≠ficas que podem estar causando problemas
    "import/no-anonymous-default-export": "off"
  }
} 